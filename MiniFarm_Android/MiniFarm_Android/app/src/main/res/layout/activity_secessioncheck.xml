<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".C_Main.SecessionCheckActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#FFFFFF"
            android:elevation="1dp">

            <ImageView
                android:id="@+id/btnsecessioncancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:background="?android:selectableItemBackground"
                android:paddingRight="4dp"
                android:paddingVertical="6dp"
                android:src="@drawable/ic_back_24dp" />

            <TextView
                android:id="@+id/tv_user_info_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="회원정보 수정"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/btnsecessionok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="?android:selectableItemBackground"
                android:padding="8dp"
                android:paddingLeft="4dp"
                android:paddingVertical="6dp"
                android:text="확인"
                android:textColor="#A1CDE1"
                android:textSize="18dp" />
        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="비밀번호 확인"
            android:textSize="14dp" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/re_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="비밀번호"
                android:textColor="#C0C0C0"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/textpw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/tv_pw"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:maxLength="20"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:textColor="#414141"
                android:textSize="14dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v 회원탈퇴 유의사항을 확인하였고, '동의 후 탈퇴' 클릭 시 탈퇴가 진행됩니다. 회원탈퇴에 동의하십니까?"
            android:textColor="#ff0000"
            android:layout_margin="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"/>
    </LinearLayout>




</LinearLayout>