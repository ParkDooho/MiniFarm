<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".C_Main.UserInfo_edit"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#FFFFFF"
            android:elevation="1dp">

            <ImageView
                android:id="@+id/btn_user_info_edit_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:background="?android:selectableItemBackground"
                android:paddingRight="4dp"
                android:paddingVertical="6dp"
                android:src="@drawable/ic_back_24dp" />

            <TextView
                android:id="@+id/tv_user_info_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="회원정보 수정"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/btn_user_info_edit_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="?android:selectableItemBackground"
                android:padding="8dp"
                android:paddingLeft="4dp"
                android:paddingVertical="6dp"
                android:text="완료"
                android:textColor="#A1CDE1"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/btnsecession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:text="회원탈퇴"
                android:textColor="#FF0000"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="103dp"
                android:layout_height="103dp"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_user_info_edit_user_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/gardener" />

                <RelativeLayout
                    android:id="@+id/btn_user_info_edit_selected_picture_option"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/circle_shape">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_star_24dp" />
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/re_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="아이디"
                android:textColor="#C0C0C0"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_myid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/tv_id"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:maxLength="20"
                android:text="돼지"
                android:textColor="#414141"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/re_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="비밀번호"
                android:textColor="#C0C0C0"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/tv_mypw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/tv_pw"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:maxLength="20"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:textColor="#414141"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/re_pwcheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pwcheck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="비밀번호 확인"
                android:textColor="#C0C0C0"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/tv_mypwcheck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/tv_pwcheck"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:maxLength="20"
                android:hint="비밀번호 확인"
                android:inputType="textPassword"
                android:textColor="#414141"
                android:textSize="14dp" />
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="05.dp"
            android:layout_marginTop="12dp"
            android:background="#E0E0E0" />
    </LinearLayout>

</RelativeLayout>